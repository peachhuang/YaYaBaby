<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_f3f3f3"
    android:orientation="vertical"
    tools:context=".ui.activity.MyEquipmentActivity">

    <RelativeLayout
        android:id="@+id/rl_bar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/main_color">

        <ImageView
            android:layout_width="@dimen/darcy_20_dp"
            android:layout_height="@dimen/darcy_20_dp"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:layout_marginStart="@dimen/darcy_10_dp"
            android:src="@drawable/back_button_selector" />


        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="我的设备"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_baby_fetal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/darcy_55_dp"
            android:background="?android:attr/selectableItemBackground">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:layout_marginStart="@dimen/darcy_10_dp"
                android:text="宝宝胎动帖"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginStart="@dimen/darcy_10_dp"
                android:layout_marginEnd="@dimen/darcy_4_dp"
                android:layout_toStartOf="@+id/iv_my_fetal"
                android:text="未绑定"
                android:textColor="@color/red_ff4c4c"
                android:textSize="14sp" />


            <ImageView
                android:id="@+id/iv_my_fetal"
                android:layout_width="@dimen/darcy_20_dp"
                android:layout_height="@dimen/darcy_20_dp"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:layout_marginEnd="@dimen/darcy_10_dp"
                android:scaleType="center"
                android:src="@mipmap/my_back" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_f3f3f3" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/darcy_55_dp"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:layout_marginStart="@dimen/darcy_10_dp"
                android:text="宝宝温度计"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginStart="@dimen/darcy_10_dp"
                android:layout_marginEnd="@dimen/darcy_4_dp"
                android:layout_toStartOf="@+id/iv_my_temperature"
                android:text="未绑定"
                android:textColor="@color/red_ff4c4c"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/iv_my_temperature"
                android:layout_width="@dimen/darcy_20_dp"
                android:layout_height="@dimen/darcy_20_dp"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:layout_marginEnd="@dimen/darcy_10_dp"
                android:scaleType="center"
                android:src="@mipmap/my_back" />

        </RelativeLayout>
    </LinearLayout>


</LinearLayout>