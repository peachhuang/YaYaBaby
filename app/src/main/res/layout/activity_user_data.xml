<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_f3f3f3"
    tools:context=".ui.activity.UserDataActivity">

    <com.yaya.baby.view.TopView
        android:id="@+id/topView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topView"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/darcy_55_dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:layout_marginStart="@dimen/darcy_10_dp"
                android:text="昵称"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginEnd="@dimen/darcy_10_dp"
                android:layout_toStartOf="@+id/iv_nick_name"
                android:text="卡哈科技"
                android:textColor="@color/gray_888888"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/iv_nick_name"
                android:layout_width="@dimen/darcy_15_dp"
                android:layout_height="@dimen/darcy_15_dp"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:layout_marginEnd="@dimen/darcy_10_dp"
                android:scaleType="center"
                android:src="@mipmap/my_back" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_f3f3f3" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/darcy_55_dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:layout_marginStart="@dimen/darcy_10_dp"
                android:text="头像"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="@dimen/darcy_40_dp"
                android:layout_height="@dimen/darcy_40_dp"
                android:layout_centerInParent="true"
                android:layout_marginEnd="@dimen/darcy_10_dp"
                android:layout_toStartOf="@+id/iv_user_head"
                android:src="@mipmap/head" />

            <ImageView
                android:id="@+id/iv_user_head"
                android:layout_width="@dimen/darcy_15_dp"
                android:layout_height="@dimen/darcy_15_dp"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:layout_marginEnd="@dimen/darcy_10_dp"
                android:scaleType="center"
                android:src="@mipmap/my_back" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_f3f3f3" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/darcy_55_dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:layout_marginStart="@dimen/darcy_10_dp"
                android:text="性别"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginEnd="@dimen/darcy_10_dp"
                android:layout_toStartOf="@+id/iv_gender"
                android:text="未知"
                android:textColor="@color/gray_888888"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/iv_gender"
                android:layout_width="@dimen/darcy_15_dp"
                android:layout_height="@dimen/darcy_15_dp"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:layout_marginEnd="@dimen/darcy_10_dp"
                android:scaleType="center"
                android:src="@mipmap/my_back" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_f3f3f3" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/darcy_55_dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:layout_marginStart="@dimen/darcy_10_dp"
                android:text="年龄"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginEnd="@dimen/darcy_10_dp"
                android:layout_toStartOf="@+id/iv_age"
                android:text="26"
                android:textColor="@color/gray_888888"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/iv_age"
                android:layout_width="@dimen/darcy_15_dp"
                android:layout_height="@dimen/darcy_15_dp"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:layout_marginEnd="@dimen/darcy_10_dp"
                android:scaleType="center"
                android:src="@mipmap/my_back" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_f3f3f3" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/darcy_55_dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:layout_marginStart="@dimen/darcy_10_dp"
                android:text="绑定手机号"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginEnd="@dimen/darcy_10_dp"
                android:layout_toStartOf="@+id/iv_phone_number"
                android:text="176***4521"
                android:textColor="@color/gray_888888"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/iv_phone_number"
                android:layout_width="@dimen/darcy_15_dp"
                android:layout_height="@dimen/darcy_15_dp"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:layout_marginEnd="@dimen/darcy_10_dp"
                android:scaleType="center"
                android:src="@mipmap/my_back" />
        </RelativeLayout>
    </LinearLayout>


    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/darcy_50_dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/darcy_20_dp"
        android:layout_marginEnd="@dimen/darcy_20_dp"
        android:layout_marginBottom="@dimen/darcy_10_dp"
        android:background="@drawable/button_selector"
        android:text="退出登录"
        android:textColor="@color/white" />

</RelativeLayout>