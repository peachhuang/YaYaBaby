<?xml version="1.0" encoding="utf-8"?>
<com.yaya.baby.view.MyReboundScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#f3f3f3"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/rl_fetal_automatic"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_margin="@dimen/darcy_20_dp"
            android:background="@drawable/rectangle_selector"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_fetal_automatic"
                android:layout_width="@dimen/darcy_64_dp"
                android:layout_height="@dimen/darcy_64_dp"
                android:src="@mipmap/fetal_automatic" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_fetal_automatic"
                android:layout_marginTop="@dimen/darcy_10_dp"
                android:text="自动数胎动"
                android:textColor="@color/main_color"
                android:textSize="14sp" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_fetal"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_margin="@dimen/darcy_20_dp"
            android:background="@drawable/rectangle_selector"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_fetal_manual"
                android:layout_width="@dimen/darcy_64_dp"
                android:layout_height="@dimen/darcy_64_dp"
                android:src="@mipmap/fetal_manual" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_fetal_manual"
                android:layout_marginTop="@dimen/darcy_10_dp"
                android:text="手动数胎动"
                android:textColor="@color/blue"
                android:textSize="14sp" />

        </RelativeLayout>
    </LinearLayout>

</com.yaya.baby.view.MyReboundScrollView>
