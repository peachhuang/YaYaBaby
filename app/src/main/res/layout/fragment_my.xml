<?xml version="1.0" encoding="utf-8"?>
<com.yaya.baby.view.MyReboundScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/darcy_55_dp"
            android:background="@color/white">

            <RelativeLayout
                android:id="@+id/rl_user_data"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="?android:attr/selectableItemBackground">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/head"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="@dimen/darcy_10_dp"
                    android:src="@mipmap/head" />

                <TextView
                    android:id="@+id/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="@dimen/darcy_10_dp"
                    android:layout_toEndOf="@+id/head"
                    android:text="卡哈科技"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:layout_marginEnd="@dimen/darcy_10_dp"
                    android:scaleType="center"
                    android:src="@mipmap/my_back" />
            </RelativeLayout>
        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="#f3f3f3" />


        <com.yaya.baby.view.MyItemLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:image="@mipmap/my_baby"
            app:text="我的宝宝" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f3f3f3" />

        <com.yaya.baby.view.MyItemLayout
            android:id="@+id/my_equipment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:image="@mipmap/my_equipment"
            app:text="我的设备" />

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="#f3f3f3" />

        <com.yaya.baby.view.MyItemLayout
            android:id="@+id/my_consultation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:image="@mipmap/my_consultation"
            app:text="我的咨询" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f3f3f3" />

        <com.yaya.baby.view.MyItemLayout
            android:id="@+id/my_topic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:image="@mipmap/my_topic"
            app:text="话题" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f3f3f3" />

        <com.yaya.baby.view.MyItemLayout
            android:id="@+id/my_collection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:image="@mipmap/my_collection"
            app:text="收藏" />

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="#f3f3f3" />

        <com.yaya.baby.view.MyItemLayout
            android:id="@+id/my_family"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:image="@mipmap/my_family"
            app:text="家庭成员管理" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f3f3f3" />

        <com.yaya.baby.view.MyItemLayout
            android:id="@+id/my_opinion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:image="@mipmap/my_opinion"
            app:text="意见反馈" />
    </LinearLayout>
</com.yaya.baby.view.MyReboundScrollView>
